<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Secret Code</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <!-- Only Logged In Members Should See this Form-->
    <h1>Enter The Secret Code to Become a Member!</h1>
    <form class="backHomeForm" action="/" method="get">
      <button class="backHomeButton" type="submit">Back Home</button>
    </form>

    <% if (errors && errors.length > 0) { %>
    <ul class="error">
      <% errors.forEach(function(error) { %>
      <li><%= error.msg %></li>
      <% }); %>
    </ul>
    <% } %> <% if (user) { %>
    <form id="secretForm" action="/secret" method="POST">
      <label for="secretCode">Secret Code:</label>
      <input id="secretCode" name="secretCode" type="text" />
      <div id="adminCheckbox">
        <label for="adminStatus" name="adminStatus">Admin Status:</label>
        <input type="checkbox" id="adminStatus" name="adminStatus" />
      </div>
      <button id="secretSubmit" type="submit">Submit</button>
    </form>
    <% } %>

    <!-- Footer -->

    <br />
